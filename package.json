{
  "name": "ecommerce-fullstack",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "install:all": "concurrently \"npm run install:backend\" \"npm run install:frontend\"",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "clean": "concurrently \"npm run clean:backend\" \"npm run clean:frontend\"",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "echo \"Backend linting not configured\"",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "db:seed": "cd backend && npm run dev:seed",
    "db:clear": "cd backend && npm run dev:clear",
    "db:stats": "cd backend && npm run dev:stats",
    "db:validate": "cd backend && npm run dev:validate",
    "setup": "npm run install:all && npm run db:seed",
    "verify:deployment": "node scripts/verify-deployment.js"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "redux",
    "vite",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ecommerce-fullstack.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ecommerce-fullstack/issues"
  },
  "homepage": "https://github.com/yourusername/ecommerce-fullstack#readme"
}
